<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data noupdate="1">
        <record id="ebs_hr_allowance_request_comp_rule" model="ir.rule">
            <field name="name">HR Allowance Request multi company rule</field>
            <field name="model_id" ref="model_ebs_payroll_allowance_request"/>
            <field name="global" eval="True"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
        </record>
        <record id="ebs_hr_allowance_request_rule_hr_manager" model="ir.rule">
            <field name="name">HR Allowance Request officer: full access</field>
            <field name="model_id" ref="model_ebs_payroll_allowance_request"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4,ref('hr.group_hr_user'))]"/>
        </record>
        <record id="ebs_hr_allowance_request_rule_base_user" model="ir.rule">
            <field name="name">user: modify own HR Allowance Request only</field>
            <field name="model_id" ref="model_ebs_payroll_allowance_request"/>
            <field name="domain_force">[('employee_id.user_id', '=', user.id)]</field>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_create" eval="1"/>
            <field name="perm_unlink" eval="0"/>
            <field name="groups" eval="[(4,ref('base.group_user'))]"/>
        </record>
        <record id="ebs_additional_element_comp_rule" model="ir.rule">
            <field name="name">Additional Element multi company rule</field>
            <field name="model_id" ref="model_ebspayroll_additional_element_lines"/>
            <field name="global" eval="True"/>
            <field name="domain_force">['|', ('employee.company_id', '=', False), ('employee.company_id', 'in', company_ids)]</field>
        </record>
    </data>
</odoo>
