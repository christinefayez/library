<odoo>

    <record id="hr_appraisal_add_objective_competency_form" model="ir.ui.view">
        <field name="name">hr.appraisal.add.objective.competency.form</field>
        <field name="model">hr.appraisal.add.objective.competency</field>
        <field name="arch" type="xml">
            <form string="Add Objective / Competency">
                <div class="oe_title">
                    <field name="type" widget="radio" options="{'horizontal': true}"/>
                </div>
                <group>
                    <field name="name"/>
                    <field name="weight"/>
                    <field name="description"/>
                </group>
                <footer>
                    <button name="action_create" string="Save" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>


    <record id="hr_appraisal_add_objective_competency_action" model="ir.actions.act_window">
        <field name="name">Add Objective / Competency</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.appraisal.add.objective.competency</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
