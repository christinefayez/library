<odoo>

    <record id="hr_appraisal_rate_form" model="ir.ui.view">
        <field name="name">hr.appraisal.rate.form</field>
        <field name="model">hr.appraisal.rate</field>
        <field name="arch" type="xml">
            <form string="Appraisal Rate">
                <div class="oe_button_box" name="button_box">
                    <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-check">
                        <field name="active" widget="boolean_button"
                               options="{&quot;terminology&quot;: &quot;active&quot;}"/>
                    </button>
                </div>
                <div class="oe_title">
                    <label for="name" class="oe_edit_only"/>
                    <h1>
                        <field name="name" placeholder="Ex. 1"/>
                    </h1>
                </div>
                <sheet>
                    <group>
                        <group>
                            <field name="percentage"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="hr_appraisal_rate_tree" model="ir.ui.view">
        <field name="name">hr.appraisal.rate.tree</field>
        <field name="model">hr.appraisal.rate</field>
        <field name="arch" type="xml">
            <tree string="Appraisal Rate" editable="bottom">
                <field name="name"/>
                <field name="percentage"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="hr_appraisal_rate_search" model="ir.ui.view">
        <field name="name">hr.appraisal.rate.search</field>
        <field name="model">hr.appraisal.rate</field>
        <field name="arch" type="xml">
            <search string="Appraisal Rate">
                <field name="name"/>
                <field name="percentage"/>
                <separator/>
                <filter name="inactive" string="Archived" domain="[('active','=',False)]"/>
                <filter name="active" string="Active" domain="[('active','=',True)]"/>
            </search>
        </field>
    </record>

    <record id="hr_appraisal_rate_action" model="ir.actions.act_window">
        <field name="name">Appraisal Rate</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.appraisal.rate</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="hr_appraisal_rate_menu" name="Appraisal Rate" parent="hr_appraisal.menu_hr_appraisal_configuration"
              action="hr_appraisal_rate_action"/>
</odoo>