<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
	<data noupdate="0">
		<record model="ir.cron" id="ir_cron_start_appraisal">
		    <field name='name'>Cron Start Appraisal</field>
		    <field name='interval_number'>1</field>
		    <field name='interval_type'>days</field>
		    <field name="numbercall">-1</field>
		    <field name="active">True</field>
		    <field name="doall" eval="False"/>
		    <field name="model_id" ref="model_hr_appraisal"/>
				<field name="user_id" ref="base.user_root"/>
		    <field name="state">code</field>
		    <field name="code">model.cron_start_appraisal()</field>
		</record>
		<record id="send_new_email_for_create_appraisal_employee" model="mail.template">
				<field name="name">Post New Appraisal For Employee</field>
				<field name="model_id" ref="model_hr_appraisal"/>
				<field name="subject">Appraisal ${object.employee_id.name}</field>
				<field name="body_html" type="html">
				<div style="margin: 0px; padding: 0px;">

				Hello ${object.employee_id.name},
				<br/><br/>
				You Have Assign To New Appraisal
				<div style="display: inline-block; margin: 15px 0px; text-align: center;">
				<a href='${object.get_url()}' target="_blank"
				class='btn btn-primary'>
				<br/>Click here to view</a>
				</div><br/>
				Thank you.

				</div>
				</field>
<!--				<field name="user_signature" eval="False"/>-->
				<field name="auto_delete" eval="True"/>
		</record>
	</data>
</odoo>
