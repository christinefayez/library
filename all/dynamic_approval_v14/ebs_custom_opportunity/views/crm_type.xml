<odoo>

    <record id="crm_type_form" model="ir.ui.view">
        <field name="name">crm.type.form</field>
        <field name="model">crm.type</field>
        <field name="arch" type="xml">
            <form string="Type">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}"/>
                        <field name="active" widget="boolean_toggle"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="crm_type_tree" model="ir.ui.view">
        <field name="name">crm.type.tree</field>
        <field name="model">crm.type</field>
        <field name="arch" type="xml">
            <tree string="Type" editable="top">
                <field name="name"/>
                <field name="active" widget="boolean_toggle"/>
                <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}"/>
            </tree>
        </field>
    </record>

    <record id="crm_type_action" model="ir.actions.act_window">
        <field name="name">Opportunity Type</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">crm.type</field>
        <field name="view_mode">tree</field>
    </record>

    <menuitem id="crm_type_menu"
              name="Opportunity Type"
              parent="crm.menu_crm_config_lead"
              action="crm_type_action"
              sequence="10"/>

    <record id="contacts.menu_contacts" model="ir.ui.menu">
      <field name="groups_id" eval="[(6, 0, [ref('base.group_user')])]"/>
    </record>

</odoo>
