<odoo>

    <record id="res_partner_type_form" model="ir.ui.view">
        <field name="name">res.partner.type.form</field>
        <field name="model">res.partner.type</field>
        <field name="arch" type="xml">
            <form string="Partner Type">
                <sheet>
                    <h1>
                        <field name="name"/>
                    </h1>
                    <group>
                        <field name="appear_license" widget="boolean_toggle"/>
                        <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}"/>
                        <field name="type" invisible="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="res_partner_type_tree" model="ir.ui.view">
        <field name="name">res.partner.type.tree</field>
        <field name="model">res.partner.type</field>
        <field name="arch" type="xml">
            <tree string="Partner Type">
                <field name="name"/>
                <field name="type" invisible="1"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </tree>
        </field>
    </record>

    <record id="res_partner_type_customer_action" model="ir.actions.act_window">
        <field name="name">Customer Type</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.partner.type</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'default_type': 'customer'}</field>
        <field name="domain" eval="[('type', '=', 'customer')]"/>
    </record>

    <record id="res_partner_type_vendor_action" model="ir.actions.act_window">
        <field name="name">Vendor Type</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.partner.type</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'default_type': 'vendor'}</field>
        <field name="domain" eval="[('type', '=', 'vendor')]"/>
    </record>

    <menuitem id="res_partner_type_customer_menu"
              name="Customer Type"
              parent="contacts.res_partner_menu_config"
              action="res_partner_type_customer_action"
              sequence="15"/>

    <menuitem id="res_partner_type_vendor_menu"
              name="Vendor Type"
              parent="contacts.res_partner_menu_config"
              action="res_partner_type_vendor_action"
              sequence="16"/>

</odoo>
