<odoo>
    <record id="account_analytic_account_form_inherit" model="ir.ui.view">
        <field name="name">account.analytic.account.form.inherit</field>
        <field name="model">account.analytic.account</field>
        <field name="inherit_id" ref="analytic.view_account_analytic_account_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='main']" position="after">
                <group string="Approval Roles">
                    <field name="apply_approval_role" widget="boolean_toggle"/>
                </group>
                <field name="approval_role_ids" nolabel="1"
                       attrs="{'invisible': [('apply_approval_role', '=', False)],'required': [('apply_approval_role', '=', True)]}"/>
            </xpath>
        </field>
    </record>

</odoo>
