<odoo noupdate="1">

    <record id="sale_order_notify_under_approval_mail_template" model="mail.template">
        <field name="name">Sales Order: Notify under Approval</field>
        <field name="model_id" ref="sale.model_sale_order"/>
        <field name="subject">Sales Quotation ${object.name != False and ': '+ object.name or ''} Waiting your Approval</field>
        <field name="email_to"></field>
        <field name="lang">${ctx.get('user_lang')}</field>
        <field name="auto_delete" eval="True"/>
        <field name="body_html" type="html">
            <p class="western" style="margin-bottom: 0in; line-height: 100%">
                <font size="2" style="font-size: 10pt">
                    <span>Dear ${ctx.get('name_to')},
                    </span>
                </font>
            </p>
            <p class="western" style="margin-bottom: 0in; line-height: 100%">
                <font size="2" style="font-size: 10pt">
                    <span >Sales quotation number ${object.name} is waiting your approval.</span>
                </font>
            </p>
            <br/>
            <b>
                <a href="${object.get_base_url()}/mail/view?model=sale.order&amp;res_id=${object.id}">View ${object.name}</a>
            </b>
            <br/>
        </field>
    </record>

