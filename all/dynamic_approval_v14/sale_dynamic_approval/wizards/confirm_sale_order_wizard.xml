<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="confirm_sale_order_wizard_form" model="ir.ui.view">
        <field name="name">confirm.sale.order.wizard.form</field>
        <field name="model">confirm.sale.order.wizard</field>
        <field name="arch" type="xml">
            <form string="">
                <h3>
                    <field name="name" readonly="1"/>
                </h3>
                <footer>
                    <button string="Confirm"
                            name="action_confirm_order"
                            class="btn-primary"
                            type="object"/>
                    <button string="Cancel" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="confirm_sale_order_wizard_action" model="ir.actions.act_window">
        <field name="name">Confirm Order</field>
        <field name="res_model">confirm.sale.order.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
