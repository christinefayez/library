<odoo>
    <record id="view_lot_serial_cost_losing_product_form" model="ir.ui.view">
        <field name="name">stock.production.lot.losing.inherit.form</field>
        <field name="model">stock.production.lot</field>
        <field name="inherit_id" ref="stock.view_production_lot_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='company_id']" position="after">
                <!--               <field name="lot_cost_price" widget="monetary"/>-->
                <field name="lot_serial_cost" widget="monetary"/>
                <field name="is_losing_product" force_save="1"/>
                <field name="avg" invisible='1' force_save="1"/>
            </xpath>
        </field>
    </record>
</odoo>