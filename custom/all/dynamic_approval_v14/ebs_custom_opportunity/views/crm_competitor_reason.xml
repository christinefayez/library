<odoo>
    <record id="crm_competitor_reason_tree" model="ir.ui.view">
        <field name="name">crm.competitor.reason.tree</field>
        <field name="model">crm.competitor.reason</field>
        <field name="arch" type="xml">
            <tree string="Competitor Reason" editable="top">
                <field name="name"/>
                <field name="partner_ids" widget="many2many_tags"/>
                <field name="active" widget="boolean_toggle"/>
                <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}"/>
            </tree>
        </field>
    </record>

    <record id="crm_competitor_reason_form" model="ir.ui.view">
        <field name="name">crm.competitor.reason.form</field>
        <field name="model">crm.competitor.reason</field>
        <field name="arch" type="xml">
            <form string="Competitor Reason">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="active" widget="boolean_toggle"/>
                        <field name="partner_ids" widget="many2many_tags"/>
                        <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="crm_competitor_reason_action" model="ir.actions.act_window">
        <field name="name">Competitor Reason</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">crm.competitor.reason</field>
        <field name="view_mode">tree</field>
    </record>

    <menuitem id="crm_competitor_reason_ment"
              name="Lost Competitor Reason"
              parent="crm.menu_crm_config_lead"
              action="crm_competitor_reason_action"
              sequence="10"/>

</odoo>
