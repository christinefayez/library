<odoo>

    <record id="view_customer_form_inherit" model="ir.ui.view">
        <field name="name">view.partner.form.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='phone']" position="after">
                <field name="visible_customize_fields" invisible="1"/>
            </xpath>
            <xpath expr="//label[@for='mobile']" position="before">
                <field name="preferred_number"/>
            </xpath>
            <xpath expr="//label[@for='mobile']" position="attributes">
                <attribute name="attrs">{'invisible': [('company_type', '=', 'company')]}</attribute>
            </xpath>
            <xpath expr="//field[@name='mobile']" position="attributes">
                <attribute name="attrs">{'invisible': [('company_type', '=', 'company')],'required': [('company_type', '=', 'person')]}</attribute>
            </xpath>
            <xpath expr="//label[@for='email']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='email']" position="attributes">
                <attribute name="required">1</attribute>
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='website']" position="before">
                <field name="email" attrs="{'required':[('company_type', '!=', 'company')]}" class="tobe_required"/>
            </xpath>
            <xpath expr="//field[@name='function']" position="attributes">
                <attribute name="string">Job Title</attribute>
            </xpath>
            <xpath expr="//page[@name='sales_purchases']/group[@name='container_row_2']/group[@name='sale']/field[@name='user_id']"
                   position="attributes">
                <attribute name="string">Contact Owner</attribute>
            </xpath>
            <xpath expr="//field[@name='vat']" position="before">
                <span class="o_form_label o_td_label" name="address_office_span">
                    <b for="office_address" class="oe_edit_only">Office Address</b>
                </span>
                <div class="o_address_format">
                    <field name="office_address"/>
                </div>
                <field name="oracle_customer_number" attrs="{'invisible':[('supplier_rank','>', 0)]}"/>
            </xpath>
            <xpath expr="//field[@name='category_id']" position="after">
                <field name="vendor_type_id"
                       attrs="{'invisible': [('supplier_rank', '&lt;', 1)]}"
                       options="{'no_create': True,'no_open': True}"
                       domain="[('type', '=', 'vendor')]" invisible="1"/>
                <field name="customer_type_id"
                       attrs="{'invisible': [('customer_rank', '&lt;', 1)]}"
                       options="{'no_create': True,'no_open': True}"
                       domain="[('type', '=', 'customer')]"/>
                <field name="appear_license" invisible="1"/>
                <field name="vat_application"/>
                <field name="property_supplier_payment_term_id" attrs="{'invisible':[('supplier_rank','&lt;', 1)]}"/>
                <field name="status" widget="radio" string="Status"/>
            </xpath>
            <xpath expr="//field[@name='category_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='name']" position="after">
                <div class="oe_title">
                    <h2>
                        <field name="customer_sequence" readonly="1" attrs="{'invisible':['|',('supplier_rank','>', 0),('customer_sequence','=', 'New')]}"/>
                    </h2>
                </div>
            </xpath>
            <xpath expr="//group[@name='sale']" position="inside">
                <field name="collection_agent"/>
            </xpath>
            <xpath expr="//field[@name='vat']" position="after">
                <field name="customer_rank" invisible="1"/>
                <field name="supplier_rank" invisible="1"/>
                <field name="property_product_pricelist"/>
                <field name="vendor_code" attrs="{'invisible':[('supplier_rank','&lt;', 1)]}"/>
                <field name="collection_point_address" attrs="{'invisible':[('supplier_rank','&lt;', 1)]}"/>
<!--                <field name="inco_term" attrs="{'invisible':[('supplier_rank','&lt;', 1)]}"/>-->
                <field name="supplier_expiry_start_effect" attrs="{'invisible':[('supplier_rank','&lt;', 1)]}"/>
                <field name="major_key_account_id" attrs="{'invisible':[('customer_rank','&lt;',0)]}"
                       options="{'no_open':true,'no_create':true}"/>
                <field name="customer_site_status" attrs="{'invisible':[('customer_rank','&lt;',0)]}"/>
                <field name="customer_code_class" attrs="{'invisible':[('customer_rank','&lt;',0)]}"/>
                <field name="po_box"/>
            </xpath>
            <!-- customer links  for social media accounts-->
            <xpath expr="//group[@name='container_row_2']" position="after">
                <field name="supplier_rank" invisible="1"/>
                <field name="customer_rank" invisible="1"/>
                <group name="container_row_3" attrs="{'invisible':[('supplier_rank','>', 0)]}">
                    <group name="social_media" string="Customer Links"
                           attrs="{'invisible':[('customer_rank','&lt;',0)]}">
                        <field name="customer_linkedin" widget="url"/>
                        <field name="customer_google" widget="url"/>
                    </group>
                    <group></group>
                </group>
            </xpath>
            <xpath expr="//page[@name='internal_notes']" position="after">
                <page name="license_info" string="License Information" attrs="{'invisible': [('appear_license', '=', False)]}">
                    <group string="License" name="license_container">
                        <group name="license_info">
                            <field name="tax_license"/>
                            <field name="supplier_contract_attachment_ids" widget="many2many_binary"/>
                        </group>
                        <group name="license_details">
                            <field name="trade_license_number"/>
                            <field name="expire_date"/>
                            <field name="trade_license_attachment_ids" widget="many2many_binary"/>
                        </group>
                    </group>
                </page>
                <page name="competitor" string="Competitors">
                    <field name="competitor_ids">
                        <tree>
                            <field name="name"/>
                        </tree>
                    </field>
                </page>
            </xpath>
            <xpath expr="//field[@name='property_account_position_id']" position="after">
                <field name="total_due"/>
                <field name="credit_limit_balance"/>
            </xpath>
            <xpath expr="//field[@name='child_ids']//div[hasclass('o_address_format')]/field[@name='country_id']"
                   position="after">
                <field name="office_address"/>
            </xpath>
            <xpath expr="//group[@colspan='5'][2]/field[@name='email']" position="attributes">
                    <attribute name="required">1</attribute>
            </xpath>
            <xpath expr="//group[@colspan='5'][2]/field[@name='mobile']" position="attributes">
                    <attribute name="required">1</attribute>
            </xpath>
<!--            <xpath expr="//field[@name='name']" position="after">-->
<!--                <field name="contact_owner"/>-->
<!--            </xpath>-->
        </field>
    </record>

    <record id="res_partner_account_form_inherit" model="ir.ui.view">
        <field name="name">res.partner.account.form.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="account.partner_view_buttons"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='total_invoiced']" position="inside">
                <field name="invoice_count"/>
            </xpath>
        </field>
    </record>


    <record id="res_partner_contact_form" model="ir.ui.view">
        <field name="name">res.partner.contact.form</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <form string="Contact / Address">
                <sheet>
                    <field name="type" required="1" widget="radio" options="{'horizontal': true}"/>
                    <field name="parent_company_id" invisible="1"/>
                    <field name="parent_id" invisible="1"/>
                    <hr/>
                    <group col="12">
                        <group colspan="5">
                            <field name="name" string="Contact Name" attrs="{'required' : [('type', '=', 'contact')]}"/>
                            <field name="title" placeholder="e.g. Mr."
                                   attrs="{'invisible': [('type','!=', 'contact')]}"/>
                            <field name="function" placeholder="e.g. Sales Director"
                                   attrs="{'invisible': [('type','!=', 'contact')]}"/>
                            <label for="street" string="Address" attrs="{'invisible': [('type','=', 'contact')]}"/>
                            <div attrs="{'invisible': [('type','=', 'contact')]}">
                                <div class="o_address_format" name="div_address">
                                    <field name="street" placeholder="Street..." class="o_address_street"/>
                                    <field name="street2" placeholder="Street 2..." class="o_address_street"/>
                                    <field name="city" placeholder="City" class="o_address_city"/>
                                    <field name="state_id" class="o_address_state" placeholder="State"
                                           options="{'no_open': True, 'no_quick_create': True}"
                                           context="{'country_id': country_id, 'default_country_id': country_id, 'zip': zip}"/>
                                    <field name="zip" placeholder="ZIP" class="o_address_zip"/>
                                    <field name="country_id" placeholder="Country" class="o_address_country"
                                           options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}"/>
                                    <field name="office_address"/>
                                </div>
                            </div>
                            <field name="comment" placeholder="Internal notes..."/>
                        </group>
                        <group colspan="5">
                            <field name="email" widget="email" required="1"/>
                            <field name="phone" widget="phone"/>
                            <field name="phone_extension" string="Ext."/>
                            <field name="mobile" widget="phone" required="1"/>
                            <field name="company_id" invisible="1"/>
                        </group>
                        <group colspan="1">
                            <field name="image_1920" widget="image" class="oe_avatar" nolabel="1"
                                   options="{'image_preview': 'image_128'}"/>
                        </group>
                    </group>
                    <field name="lang" invisible="True"/>
                    <field name="user_id" invisible="True"/>
                </sheet>
            </form>
        </field>
    </record>

    <record id="base.action_partner_form" model="ir.actions.act_window">
        <field name="context">{'res_partner_search_mode': 'customer', 'default_customer_rank': 1}</field>
    </record>

    <record id="crm.res_partner_menu_customer" model="ir.ui.menu">
      <field name="parent_id" eval="ref('crm.crm_menu_config')"/>
      <field name="groups_id" eval="[(6, 0, [ref('base.group_erp_manager')])]"/>
    </record>

    <record id="sale.res_partner_menu" model="ir.ui.menu">
      <field name="parent_id" eval="ref('sale.menu_sale_config')"/>
      <field name="groups_id" eval="[(6, 0, [ref('base.group_erp_manager')])]"/>
    </record>

</odoo>
