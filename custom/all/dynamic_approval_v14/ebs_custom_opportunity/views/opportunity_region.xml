<odoo>

    <record id="opportunity_region_tree_view" model="ir.ui.view">
        <field name="name">opportunity.region.tree.view</field>
        <field name="model">opportunity.region</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="name"/>
                <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}"/>
            </tree>
        </field>
    </record>

    <record id="opportunity_region_action" model="ir.actions.act_window">
        <field name="name">Regions</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">opportunity.region</field>
        <field name="view_mode">tree</field>
    </record>

    <menuitem id="opportunity_region_menu" parent="crm.crm_menu_config"
              name="Regions" action="opportunity_region_action"/>

</odoo>
