<odoo>

    <record id="competitor_lost_view_form_inherit" model="ir.ui.view">
        <field name="name">Opportunity.Competitor.Lost.view.form</field>
        <field name="model">crm.lead.lost</field>
        <field name="inherit_id" ref="crm.crm_lead_lost_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='lost_reason_id']" position="after">
                <field name="is_competitor_reason" invisible="1"/>
                <field name="lost_competitor_id" attrs="{'invisible':[('is_competitor_reason','=', False)]}"/>
            </xpath>
            <xpath expr="//field[@name='lost_reason_id']" position="attributes">
                <attribute name="required">1</attribute>
            </xpath>
        </field>
    </record>

</odoo>
