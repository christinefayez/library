<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="rule_appraisal_employee_internal_user" model="ir.rule">
            <field name="name">Appraisal Employee: own document</field>
            <field ref="model_hr_appraisal" name="model_id"/>
            <field name="domain_force">[('employee_id.user_id', '=', user.id)]</field>
            <field name="perm_write" eval="1"/>
            <field name="perm_create" eval="1"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_unlink" eval="1"/>
            <field name="groups" eval="[(4, ref('security_groups.group_hr_employee'))]"/>
    </record>
    <record id="group_appraisal_user" model="res.groups">
      <field name="name">User</field>
      <field name="category_id" ref="base.module_category_human_resources_appraisals"/>
    </record>

    <record id="rule_appraisal_internal_user" model="ir.rule">
            <field name="name">Appraisal: own document</field>
            <field ref="hr_appraisal.model_hr_appraisal" name="model_id"/>
            <field name="domain_force">['|',('employee_id.user_id', '=', user.id),('employee_id.parent_id.user_id','=',user.id)]</field>
            <field name="groups" eval="[(4, ref('hr_appraisal_custom.group_appraisal_user'))]"/>
    </record>

</odoo>
