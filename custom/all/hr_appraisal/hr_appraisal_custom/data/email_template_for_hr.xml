<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
	<data noupdate="0">
		<record id="send_new_email_for_hr_rate_manager" model="mail.template">
				<field name="name">HR Appraisal Manager Rate</field>
				<field name="model_id" ref="model_hr_appraisal"/>
				<field name="subject">Appraisal Rate ${object.employee_id.parent_id.name}</field>
				<field name="email_to">amr.sinbel@7d.com.kw,rima.alchami@7d.com.kw</field>
				<field name="body_html" type="html">
				<div style="margin: 0px; padding: 0px;">

				Hello HR Department,
				<br/><br/>
				${object.employee_id.parent_id.name} make change in rate <br/>
				<div style="display: inline-block; margin: 15px 0px; text-align: center;">
				<a href='${object.get_url()}' target="_blank"
				class='btn btn-primary'>
				<br/>Click here to view</a>
				</div><br/>
				Thank you.

				</div>
				</field>
<!--				<field name="user_signature" eval="False"/>-->
				<field name="auto_delete" eval="True"/>
		</record>
	</data>
</odoo>
