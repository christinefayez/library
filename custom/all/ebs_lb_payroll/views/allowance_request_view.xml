<odoo>
    <data>
        <!--list view -->
        <record id="allowance_request_tree" model="ir.ui.view">
            <field name="name">allowance_request_tree</field>
            <field name="model">ebs.payroll.allowance.request</field>
            <field name="arch" type="xml">
                <tree decoration-muted="state == 'reject'"
                      decoration-info="state == 'draft'"
                      decoration-success="state == 'approved'">
                    <field name="employee_id"/>
                    <field name="request_type"/>
                    <field name="request_date"/>
                    <field name="payment_date"/>
                    <field name="amortization_start_date"/>
                    <field name="amount"/>
                    <field name="state"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                </tree>
            </field>
        </record>

        <!--Form views -->
        <record id="allowance_request_form" model="ir.ui.view">
            <field name="name">allowance_request_form</field>
            <field name="model">ebs.payroll.allowance.request</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="submit_request" string="Submit" class="oe_highlight" type="object"
                                attrs="{'invisible': [('state', '!=', 'draft')]}"/>

                        <button name="accept_request" string="Approve" class="oe_highlight" type="object"
                                attrs="{'invisible': ['|',('state', '!=', 'submit'),('display_approve', '=', False)]}"
                                groups="hr_payroll.group_hr_payroll_user"/>

                        <button name="financial_request" string="Financial Approval" class="oe_highlight"
                                type="object" attrs="{'invisible': [('state', '!=', 'approved')]}"
                                groups="account.group_account_invoice"/>

                        <button name="reject_request" string="Reject" class="oe_highlight" type="object"
                                attrs="{'invisible': ['|',('state', '!=', 'submit'),('display_approve', '=', False)]}"
                                groups="hr_payroll.group_hr_payroll_user"/>

                        <button name="reject_request" string="Reject" class="oe_highlight"
                                type="object" attrs="{'invisible': [('state', '!=', 'approved')]}"
                                groups="hr_payroll.group_hr_payroll_user"/>

                        <button name="draft_request" string="Set Draft" class="oe_highlight" type="object"
                                attrs="{'invisible': ['|',('state', '!=', 'submit'),('display_approve', '=', False)]}"
                                groups="hr_payroll.group_hr_payroll_user"/>

                        <button name="draft_request" string="Set Draft" class="oe_highlight"
                                type="object" attrs="{'invisible': [('state', '!=', 'approved')]}"
                                groups="account.group_account_invoice"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group name="group_top">
                            <group name="group_left">
                                <field name="display_approve" invisible="1"/>
                                <field name="employee_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <field name="request_type" attrs="{'readonly': [('state', '!=', 'draft')]}"
                                       options="{'no_create': True,'no_create_edit':True}"/>
                                <field name="amount" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <field name="company_id" groups="base.group_multi_company"/>
                                <field name="payslip_id" attrs="{'invisible':[('payslip_id','=',False)]}"/>
                            </group>
                            <group name="group_right">
                                <field name="request_date" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <field name="payment_date" attrs="{'readonly': [('state', '!=', 'submit')],
                                                                     'invisible':[('state','=','draft')]}"/>
                                <field name="amortization_start_date" attrs="{'readonly': [('state', '!=', 'submit')],
                                                                     'invisible':[('state','=','draft')]}"/>
                                <field name="number_of_month" attrs="{'readonly': [('state', '!=', 'submit')],
                                                                     'invisible':[('state','=','draft')]}"/>
                            </group>
                        </group>
                        <group name="group_down">
                            <field name="description" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                        </group>
                        <notebook>
                            <page name="allowance_request_line" string="Lines">
                                <field name="lines_ids" readonly="True">
                                    <tree>
                                        <field name="date"/>
                                        <field name="amount" sum="Amount"/>
                                        <field name="payslip_id"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>


        <!--window -->
        <record id="allowance_request_window" model="ir.actions.act_window">
            <field name="name">Allowanceee Request</field>
            <field name="res_model">ebs.payroll.allowance.request</field>
            <field name="view_mode">tree,form</field>
        </record>
        <!--menu -->

        <menuitem id="allowance_request_window_menu" name="Allowanceee Request" sequence="82"
                  action="allowance_request_window" parent="hr_payroll.menu_hr_salary_configuration"/>
    </data>
</odoo>