<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Inherit Form View to Modify it -->
        <record id="product_template_product_form" model="ir.ui.view">
            <field name="name">product.template.product.form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='detailed_type']" position="after">
                    <field name="vendor_id" widget="res_partner_many2one"
                           context="{'res_partner_search_mode': 'supplier'}"/>
                    <field name="model_number"/>


                </xpath>
                <xpath expr="//field[@name='barcode']" position="after">
                    <field name="barcode_2"/>
                </xpath>
                <xpath expr="//div[@name='options']" position="inside">
                    <div>
                                <field name="digital"/>
                                <label for="digital"/>
                            </div>
                </xpath>
                <xpath expr="//page[@name='general_information']" position="after">
                    <page name="digital" string="Digital Product" attrs="{'invisible':[('digital','=',False)]}" groups="base.group_erp_manager">
                        <group>
                            <group>
                                 <field name="d_type"/>
                                <field name="card" attrs="{'required':[('d_type','=','epay'),('digital','=',True)],'invisible':[('d_type','!=','epay')]}"/>
                            </group>
                            <group>
                                 <field name="amount" attrs="{'required':[('d_type','=','epay'),('digital','=',True)],'invisible':[('d_type','!=','epay')]}"/>
                                <field name="currency" attrs="{'required':[('d_type','=','epay'),('digital','=',True)],'invisible':[('d_type','!=','epay')]}"/>
                                <field name="sku" attrs="{'required':[('d_type','=','ezai'),('digital','=',True)],'invisible':[('d_type','!=','ezai')]}"/>
                                <field name="amount_ezi" attrs="{'required':[('d_type','=','ezai'),('digital','=',True)],'invisible':[('d_type','!=','ezai')]}"/>

                            </group>

                        </group>




                </page>
                </xpath>


            </field>
        </record>

        <record id="product_product_product_form" model="ir.ui.view">
            <field name="name">product.product.product.form</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='detailed_type']" position="after">
                    <field name="vendor_id" widget="res_partner_many2one"
                           context="{'res_partner_search_mode': 'supplier'}"/>
                    <field name="model_number"/>

                </xpath>
                <xpath expr="//field[@name='barcode']" position="after">
                    <field name="barcode_2"/>
                </xpath>

            </field>
        </record>
        <record id="product_brand_tree" model="ir.ui.view">
            <field name="name">product brand</field>
            <field name="model">product.brand</field>
            <field name="arch" type="xml">
                <tree string="">
                    <field name="name"/>
                    <field name="code"/>
                </tree>
            </field>
        </record>

        <record id="product_brand_form" model="ir.ui.view">
            <field name="name">product_brand</field>
            <field name="model">product.brand</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="product_brand" model="ir.actions.act_window">
            <field name="name">product_brand</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">product.brand</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                <!-- Add Text Here -->
              </p><p>
                <!-- More details about what a user can do with this object will be OK -->
              </p>
            </field>
        </record>

        <record id="sale_order_inherit" model="ir.ui.view">
            <field name="name">sale_order</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                 <xpath expr="//field[@name='order_line']/tree/field[@name='product_id']" position="replace">
                     <field name="product_id" attrs="{'readonly': [('product_updatable', '=', False)],'required': [('display_type', '=', False)]}" options="{'no_open': True,'no_create_edit': True}" force_save="1" context="{'partner_id': parent.partner_id,'quantity': product_uom_qty,'pricelist': parent.pricelist_id,'uom':product_uom,'company_id': parent.company_id,'default_lst_price': price_unit,'default_description_sale': name}" domain="[('sale_ok', '=', True), '|', ('company_id', '=', False), ('company_id', '=', parent.company_id)]" widget="product_configurator"/>
                    </xpath>

            </field>
        </record>

         <record id="product_template_search_form_view_brand_model" model="ir.ui.view">
            <field name="name">product.template.search.brand.form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_search_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='pricelist_id']" position="after">
                    <separator/>
                    <field name="model_number" string="Model Number"/>
                    <field name="vendor_id" string="Brand"/>
                </xpath>
            </field>
        </record>

        <!-- This Menu Item must have a parent and an action -->
        <menuitem id="product_brand_menu" name="Product Brand" parent="stock.menu_stock_inventory_control" action="product_brand" sequence="3"/>


    </data>
</odoo>